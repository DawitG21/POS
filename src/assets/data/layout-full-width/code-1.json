import { Component } from '@angular/core';mport { AppSettings } from '../../../service/app-settings.service';@Component({  selector: 'layout-full-width',  templateUrl: './layout-full-width.html'})export class LayoutFullWidthPage {  constructor(private appSettings: AppSettings) { }    ngOnInit() {    this.appSettings.appSidebarNone = true;    this.appSettings.appContentFullWidth = true;  }  ngOnDestroy() {    this.appSettings.appSidebarNone = false;    this.appSettings.appContentFullWidth = false;  }}